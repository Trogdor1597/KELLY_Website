            <img src="<%= baseURL %>/content/photos/kellylogo_black_whiteoutline.png" alt="KELLY band logo" class="w-54 h-54 mx-auto mb-4">

            <!-- Band Name -->
            <h1 class="text-2xl font-bold mb-4">@thebandkelly</h1>

            <!-- Social Icons -->
            <div class="flex justify-center space-x-6 mb-8">
                <!-- Instagram -->
                <a href="https://instagram.com/thebandkelly" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-red-500 transform hover:scale-110 transition-all duration-300" aria-label="Instagram">
