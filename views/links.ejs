<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KELLY - Links</title>
    <link href="/output.css" rel="stylesheet">
</head>
<body class="bg-black text-white font-sans">

    <!-- Video Background -->
    <div class="fixed top-0 left-0 w-full h-full z-0 overflow-hidden">
        <video autoplay loop muted playsinline class="absolute top-1/2 left-1/2 w-auto min-w-full min-h-full max-w-none -translate-x-1/2 -translate-y-1/2">
            <source src="/content/videos/linkpagebackground.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>

    <!-- Overlay -->
    <div class="fixed inset-0 bg-black bg-opacity-60 z-10"></div>

    <!-- Content Container -->
    <div class="relative min-h-screen flex flex-col items-center justify-center p-4 z-20">
        <div class="w-full max-w-md mx-auto text-center">
            <!-- Profile Image/Logo -->
            <img src="/content/photos/kellylogo2.png" alt="KELLY band logo" class="w-54 h-54 rounded-full mx-auto mb-4 border-2 border-white shadow-lg">

            <!-- Band Name -->
            <h1 class="text-2xl font-bold mb-8">@__kelly.tx</h1>

            <!-- Links -->
            <div class="space-y-4">
                <% links.forEach(link => { %>
                    <a href="<%= link.url %>" target="_blank" rel="noopener noreferrer" class="block w-full p-4 bg-gray-800 bg-opacity-80 rounded-md text-lg font-semibold border-2 border-transparent hover:border-red-500 hover:scale-105 transition-all duration-200">
                        <%= link.title %>
                    </a>
                <% }) %>
            </div>

            <!-- Social Icons Footer -->
            <div class="mt-12 flex justify-center space-x-6">
                <% socials.forEach(social => { %>
                    <a href="<%= social.url %>" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-red-500 transform hover:scale-110 transition-all duration-300" aria-label="<%= social.name %>">
                        <%- social.svg %>
                    </a>
                <% }) %>
            </div>
        </div>
    </div>

</body>
</html>