<%- include('partials/header') %>

<div class="relative min-h-screen flex flex-col">
    <main class="relative container mx-auto px-4 py-12 flex-grow">
        <h1 class="text-4xl font-bold mb-8 text-white">Contact Form Submissions</h1>

        <div class="bg-gray-800 rounded-lg shadow-lg overflow-x-auto">
            <table class="min-w-full text-left text-sm text-gray-300">
                <thead class="bg-gray-900 text-xs text-gray-400 uppercase">
                    <tr>
                        <th scope="col" class="px-6 py-3">Date</th>
                        <th scope="col" class="px-6 py-3">Name</th>
                        <th scope="col" class="px-6 py-3">Email</th>
                        <th scope="col" class="px-6 py-3">Message</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (contacts.length > 0) { %>
                        <% contacts.forEach(contact => { %>
                            <tr class="border-b border-gray-700 hover:bg-gray-700">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <%= new Date(contact.submitted_at).toLocaleString() %>
                                </td>
                                <td class="px-6 py-4 font-medium text-white"><%= contact.name %></td>
                                <td class="px-6 py-4"><a href="mailto:<%= contact.email %>" class="text-red-400 hover:underline"><%= contact.email %></a></td>
                                <td class="px-6 py-4"><%= contact.message %></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="text-center py-8">No submissions yet.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </main>
    <div class="relative">
        <%- include('partials/footer') %>
    </div>
</div>