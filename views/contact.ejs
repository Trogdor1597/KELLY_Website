            <!-- Contact Form & Booking Info -->
            <div class="grid md:grid-cols-2 gap-16 items-start">
                <!-- Form Section -->
                <section>
                    <h2 class="text-2xl font-bold text-red-500 mb-4">Send a Message</h2>
                    <p class="text-gray-400 mb-6">Use this form to join our mailing list or to ask any general questions.</p>

                    <% if (status === 'success') { %>
                        <div class="bg-green-500 text-white p-4 rounded-md mb-6 text-center">
                            Thanks for reaching out! We'll be in touch soon.
                        </div>
                    <% } else if (status === 'error') { %>
                        <div class="bg-red-500 text-white p-4 rounded-md mb-6 text-center">
                            Something went wrong. Please try again.
                        </div>
                    <% } %>

                    <form action="/contact" method="POST">
                        <div class="space-y-4">
                            <input type="text" name="name" placeholder="Your Name" required class="w-full p-3 bg-gray-800 rounded-md border border-gray-700 focus:outline-none focus:ring-2 focus:ring-red-500">
                            <input type="email" name="email" placeholder="Your Email" required class="w-full p-3 bg-gray-800 rounded-md border border-gray-700 focus:outline-none focus:ring-2 focus:ring-red-500">
                            <textarea name="message" rows="5" placeholder="Your Message (Optional)" class="w-full p-3 bg-gray-800 rounded-md border border-gray-700 focus:outline-none focus:ring-2 focus:ring-red-500"></textarea>
                        </div>
                        <button type="submit" class="mt-6 w-full px-6 py-3 bg-red-600 text-white font-bold rounded-full hover:bg-red-500 transition-colors duration-200">
                            Submit
                        </button>
                    </form>
                </section>

                <!-- Booking Info Section -->
                <section class="bg-gray-800 bg-opacity-70 p-8 rounded-lg text-center">
                    <h2 class="text-2xl font-bold text-red-500 mb-4">Booking Inquiries</h2>
                    <p class="text-gray-300 mb-4">For all booking requests, please reach out to us at the email below.</p>
                    <a href="mailto:booking@example.com" class="text-lg text-white font-bold hover:text-red-500 transition-colors duration-200 break-all">
                        thebandkelly@gmail.com
                    </a>
                </section>
